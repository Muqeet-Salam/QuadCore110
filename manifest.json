{
  "manifest_version": 3,
  "name": "Privacy Guardian AI",
  "version": "1.0",
  "description": "Analyze website privacy, track cookies, and generate GDPR/DPDP requests",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "ui/index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}